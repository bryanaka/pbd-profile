<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1.0">
	<%= csrf_meta_tags %>

	<title><%= content_for?(:title) ? yield(:title) : "PBD Portal" %></title>
	<meta name="description" content="<%= content_for?(:description) ? yield(:description) : "LBNL Physical Biosciences Division Portal"%>">
	<%= stylesheet_link_tag "application", :media => "all" %>
	<!--
	<script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js"></script>
	-->
	<%= yield(:head) %>
</head>
<body class="<%= controller_name %>" data-action="<%= action_name %>">
	<%= render 'layouts/messages' %>
	<header class="mainHeader">
		<h1>Welcome to The PBD Portal</h1>
	</header>
	<%= render 'layouts/navigation' %>
	<%= yield %>
	<footer class="one-whole mainFooter" style="z-index:3;position:relative;">
		<section class="grid__item one-third portable-one-whole mainFooter__section">
			<h3 class="mainFooter__title">Berkeley Lab</h4>
			<ul class="mainFooter__linkGroup">
				<li><a href="#">A-Z Index</a></li>
				<li><a href="#">News Center</a></li>
				<li><a href="#">LBNL Profile</a></li>
				<li><a href="#">Phone Book</a></li>
			</ul>
		</section>
		<section class="grid__item one-third portable-one-whole mainFooter__section">
			<h3 class="mainFooter__title">Physical Biosciences</h4>
			<ul class="mainFooter__linkGroup">
				<li><a href="#">PBD News</a></li>
				<li><a href="#">Webcasts</a></li>
				<li><a href="#">Scientist Profiles</a></li>
			</ul>
		</section>
		<section class="grid__item one-third portable-one-whole mainFooter__section">
			<h3 class="mainFooter__title">Web Resources</h4>
			<ul class="mainFooter__linkGroup">
				<li><a href="#">PBD API Documentation</a></li>
				<li><a href="#">Contact the Webmaster</a></li>
			</ul>
		</section>
	</footer>
	
<%= yield(:scripts) %>
<%= javascript_include_tag "application" %>


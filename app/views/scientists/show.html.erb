<div class="mainContent grid">
	
	<article class="grid__item one-sixth lap-two-thirds">
		<%= image_tag @scientist.picture_url, :class => "profile__img" %>
	</article>
	
	<section class="profile__name grid__item five-sixths lap-one-whole">
		<h1><%= @scientist.first_name %> <%= @scientist.last_name %></h1>
		<h2><%= @scientist.title %></h2>
		<!-- This needs to be associated to scientist__titles model -->
		<article class="profile__titles grid__item one-half">
			<h4>
				Senior Scientist &bull; Adjunct Professor - Dept. of Bioengineering &bull; 
				U.C. Berkeley, Vice President for Technology &bull;
				The Joint BioEnergy Institute &bull; ALS Division Deputy for Biosciences &bull; 
				Chair of the ALS Biosciences Council
			</h4>
		</article>
		<article class="profile__websites grid__item one-half">
			<h4>Websites:</h4>
			<h4>
				<a>Advanced Light Source</a> &bull;
				<a>Physical Biosciences</a><br>
				<a>Joint BioEnergy Institute</a> &bull;
				<a>Site four</a><br>
			</h4>
		</article>
	</section>
	<section class="profile__contact">

		<article class="scientist__address grid__item one-half lap-one-whole">
			<h3>Location Information</h3>
			<%= @scientist.profile.company %><br>
			<%= @scientist.profile.address1 %><br>
			<%= @scientist.profile.address2 %><br>
			<%= @scientist.profile.city %>, <%= @scientist.profile.state %> <%= @scientist.profile.zip_code %> USA
		</article>
	
		<article class="scientist__location grid__item one-half lap-one-whole">
			<h3>Contact Information</h3>
			Primary Number: <%= @scientist.profile.phone1 %><br>
			<%= @scientist.profile.phone2_type %>: <%= @scientist.profile.phone2 %><br>
			E-Mail: <%= @scientist.profile.email %><br>
		</article>

	</section>

	<section class="scientist__bio">
		<article class="grid__item one-half scientist__emphasis lap-one-whole">
			<h3>Research Emphasis:</h3>
			<p>
				<%= @scientist.profile.emphasis %>
			</p>
		</article>
		<article id="scientist__summary" class="grid__item one-half lap-one-whole">
			<h3>Summary:</h3>
			<p>
				<%= @scientist.profile.summary %>
			</p>
		</article>
	</section>
<%= link_to 'Edit', edit_scientist_path(@scientist) %> |
<%= link_to 'Back', scientists_path %>

</div>



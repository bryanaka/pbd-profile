<% content_for :head do %>
    <%= stylesheet_link_tag "videos" %>
<% end %>

<%= simple_form_for(@video) do |f| %>
    <%= f.error_notification %>
    <%= f.input :title, :input_html => {:class => "video_form"} %>
    <%= f.input :date, :as => :date, :input_html => {:class => "video_form"} %>
    <%= f.input :scientist, :input_html => {:class => "video_form"} %>
    <%= f.input :vid_link, :input_html => {:class => "video_form"} %>
    <%= f.input :category,
        collection: ["Sci-Ops Series", "Brown Bag Series", "Invited Speaker", "Press Release", "Event", "Other"],
        :input_html => {:class => "video_form"} %>
    <%= f.input :description, as: :text, input_html: {:class => "video_form"} %>
    <%= f.button :submit %>
<% end %>
